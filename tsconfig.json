{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$icons": ["node_modules/heroicons/outline"],
			"$icons/*": ["node_modules/heroicons/outline/*"]
		}
	},
	"include": [
		"./src/**"
	],
	"exclude": [
		"../node_modules/**",
	]
}
